{
  "name": "electron-rust-texture",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.main.json && npm run build:renderer",
    "build:renderer": "esbuild renderer.tsx --bundle --format=iife --global-name=Renderer --outfile=dist/renderer.js --external:electron --platform=browser --target=es2020",
    "start": "npm run build && electron .",
    "dev": "npm run build && concurrently \"npm run watch\" \"wait-on dist/main.js dist/renderer.js && electron .\"",
    "watch": "concurrently \"tsc -p tsconfig.main.json --watch\" \"esbuild renderer.tsx --bundle --format=iife --global-name=Renderer --outfile=dist/renderer.js --external:electron --platform=browser --target=es2020 --watch\"",
    "build-native": "cd native && npm run build && cd .."
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.6",
    "@mui/material": "^7.3.6",
    "@mui/x-tree-view": "^8.21.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "split-pane-react": "^0.1.3"
  }
}
