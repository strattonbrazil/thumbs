{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./native"]
  },
  "include": [
    "*.tsx",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "native"
  ]
}
